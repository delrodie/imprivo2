{% extends 'base.html.twig' %}
{% block extra_title %}Gestion des devis{% endblock %}
{% block body %}
    <main class="main-content">
        <div class="container-fluid">
            <!-- Header de la page -->
            <div class="d-flex justify-content-between align-items-center mb-4 mt-5">
                <h1 class="h3 fw-bold mb-0">Liste des devis</h1>

            </div>


            <!-- Tableau des devis -->
            <div class="card p-4 mt-5">
                <div class="table-responsive mt-5">
                    <table class="table table-hover table-sm align-middle mb-0" id="tabList" style="font-size: .95rem;">
                        <thead class="text-muted small text-uppercase text-center mt-5">
                        <tr>
                            <th class="text-center" scope="col">ID</th>
                            <th class="text-center" scope="col">NUMERO</th>
                            <th class="text-center" scope="col">DATE</th>
                            <th class="text-center" scope="col">CLIENT</th>
                            <th class="text-center" scope="col">MONTANT</th>
                            <th class="text-center" scope="col">STATUT</th>
                            <th class="text-center" scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>


{% endblock %}

{% block extra_stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css">
    <style>

        /* Ajustement de la largeur du offcanvas */
        @media screen and (max-width: 1079px ) {
            .offcanvas.offcanvas-end {
                width: 90%;
                /*width: 800px;*/
                /* Largeur de base pour les grands écrans */
            }
        }

        @media screen and (min-width: 1080px){
            .offcanvas.offcanvas-end {
                width: 80%;
                /*width: 800px;*/
                /* Largeur de base pour les grands écrans */
            }
        }

    </style>
{% endblock %}
{% block extra_javascripts %}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>


    <!-- JS DataTables + Bootstrap 5 -->
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

    <!-- JS Buttons -->
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.colVis.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tabList').DataTable({
                ajax: "{{ path('api_facture_index') }}",
                columns: [
                    { data: 'id' },
                    { data: 'numero', className: 'text-center'},
                    { data: 'date', className: 'text-center'},
                    { data: 'client'},
                    { data: 'montant', className: 'text-end'},
                    { data: 'statut', className: 'text-center'},
                    {
                        data: 'actions',
                        render: function (data, type, row) {
                            return `
                        <div class="d-flex gap-2 justify-content-center"
                            data-controller="user-actions"
                            data-user-actions-edit-url-value="${data.edit ?? ''}"
                            data-user-actions-delete-url-value="${data.delete ?? ''}"
                            data-user-actions-confirm-message-value="Voulez-vous vraiment supprimer le devis ${row.numero} ?"
                            data-user-actions-success-message-value="Le devis ${row.numero} a bien été supprimé."
                            data-user-actions-error-message-value="Erreur lors de la suppression du devis ${row.numero}."
                        >
                            ${data.detail ? `
                                <a href="${data.detail}" class="bouton btn-pdf" title="Détails">
                                    <i class="bi bi-file-earmark-pdf"></i>
                                </a>` : ''
                            }
                            ${data.edit ? `
                                <a href="#" data-action="click->user-actions#edit" class="bouton btn-modif" title="Modifier">
                                    <i class="bi bi-pencil-square"></i>
                                </a>` : ''
                            }
                            ${data.delete ? `
                                <a href="#" data-action="click->user-actions#delete" class="bouton btn-sup" title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </a>` : ''
                            }
                        </div>
                        `
                        }
                    }
                ],
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'copyHtml5', text: '<i class="bi bi-clipboard"></i> Copier', className: 'btn btn-secondary btn-sm' },
                    { extend: 'excelHtml5', text: '<i class="bi bi-file-earmark-excel"></i> Excel', className: 'btn btn-secondary btn-sm' },
                    { extend: 'csvHtml5', text: '<i class="bi bi-filetype-csv"></i> CSV', className: 'btn btn-secondary btn-sm' },
                    { extend: 'print', text: '<i class="bi bi-printer"></i> Imprimer', className: 'btn btn-secondary btn-sm' },
                    { extend: 'colvis', text: '<i class="bi bi-eye"></i> Colonnes', className: 'btn btn-dark btn-sm' }
                ],
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.8/i18n/fr-FR.json"
                }
            });
        });

    </script>
{% endblock %}

{{ form_start(form, {
    action: representant.id
    ? path('app_representant_edit', { id: representant.id })
    : path('app_representant_new'),
    method: 'POST',
    attr: {
        'data-controller': 'form',
        'data-form-target': 'form',
        'data-action': 'submit->form#submit'
    }
}) }}
<div class="form-group row g-3 mt-3">
    <div class="col-12 mt-3">{{ form_row(form.client) }}</div>
    <div class="col-6 mt-3">{{ form_row(form.nom) }}</div>
    <div class="col-6 mt-3">{{ form_row(form.prenom) }}</div>
    <div class="col-6 mt-3">{{ form_row(form.fonction) }}</div>
    <div class="col-6 mt-3">{{ form_row(form.email) }}</div>
    <div class="col-6 mt-3">{{ form_row(form.telephone1) }}</div>
    <div class="col-6 mt-3">{{ form_row(form.telephone2) }}</div>
    {{ form_rest(form) }}
</div>

<div class="row mt-5">
    <div class="col-6 d-grid gap-2">
        <a href="{{ absolute_url(path('app_representant_index') )}}" class="btn btn-outline-secondary" id="cancelBtn" data-bs-dismiss="offcanvas">
            <i class="bi bi-x-lg me-2"></i>Annuler
        </a>
    </div>
    <div class="col-6 d-grid gap-2">
        <button type="submit" class="btn btn-chart" id="sendBtn">
            <i class="bi bi-save me-2"></i>Enregistrer
        </button>
    </div>
</div>
{{ form_end(form) }}

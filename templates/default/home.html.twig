{% extends 'base.html.twig' %}

{% block extra_title %}Tableau de bord{% endblock %}

{% block body %}
    <main class="main-content" data-sidebar-target="mainContent">
        <div class="container-fluid">
            <!-- Section Performance -->
            <div class="card p-4 mb-4 mt-5">
                <div
                    class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
                    <div>
                        <h2 class="h3 fw-bold mb-1">Votre performance en streaming</h2>
                        <p class="text-muted small">Streams audio | 7 derniers jours</p>
                    </div>
                    <a href="#" class="text-primary fw-semibold small text-decoration-none">VOIR PLUS</a>
                </div>
                <div class="position-relative" style="height: 300px;">
                    <canvas id="streamChart" class="w-100 h-100"></canvas>
                </div>
            </div>

            <!-- Section Dernières sorties -->
            <div>
                <h3 class="h4 fw-bold mb-3">Les dernières sorties</h3>
                <div class="row g-4">
                    <!-- Carte Ajouter une nouvelle sortie -->
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <div
                            class="card bg-white p-3 h-100 shadow-sm border border-dashed border-primary text-primary d-flex flex-column align-items-center justify-content-center cursor-pointer">
                            <i class="bi bi-plus-circle-fill fs-4 mb-2"></i>
                            <span class="fw-semibold text-center small">Créer une nouvelle sortie</span>
                        </div>
                    </div>
                    <!-- Cartes de sorties de remplacement -->
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <div class="card shadow-sm p-3">
                            <img src="https://placehold.co/300x200/4f46e5/ffffff?text=Album+1"
                                 class="img-fluid rounded mb-2" alt="Image de l'album">
                            <p class="text-center fw-medium small mb-0">77.5 K streams</p>
                        </div>
                    </div>
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <div class="card shadow-sm p-3">
                            <img src="https://placehold.co/300x200/10b981/ffffff?text=Album+2"
                                 class="img-fluid rounded mb-2" alt="Image de l'album">
                            <p class="text-center fw-medium small mb-0">2 streams</p>
                        </div>
                    </div>
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <div class="card shadow-sm p-3">
                            <img src="https://placehold.co/300x200/ef4444/ffffff?text=Album+3"
                                 class="img-fluid rounded mb-2" alt="Image de l'album">
                            <p class="text-center fw-medium small mb-0">11.6 K streams</p>
                        </div>
                    </div>
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <div class="card shadow-sm p-3">
                            <img src="https://placehold.co/300x200/f59e0b/ffffff?text=Album+4"
                                 class="img-fluid rounded mb-2" alt="Image de l'album">
                            <p class="text-center fw-medium small mb-0">174 streams</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

